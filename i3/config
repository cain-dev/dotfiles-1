#
# i3 config file (v4)
#

# Mod key: Super key
set $mod Mod4
# Mod2 key: Alt key
set $mod2 Mod1
# Default terminal
set $myterm termite

# Font for window titles.
font pango:TerminessTTF Nerd Font Mono 11 

# Gaps
#for_window [class="^.*"] border pixel 0 
default_border pixel 2
default_floating_border normal
gaps inner 6
gaps outer 0

# Colors
set_from_resource $wal-fg i3wm.color7 #f0f0f0
set_from_resource $wal-bg i3wm.color2 #f0f0f0

set $bg-color 	         i3wm.color2
set $inactive-bg-color   #002b36
set $text-color          #ffffff
set $inactive-text-color #ffffff
set $urgent-bg-color     #E42343

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod 
# Start a terminal
bindsym $mod+Return exec $myterm -d "`$HOME/.dotfiles/bin/xcwd`"

# kill focused window
bindsym $mod+q kill
bindsym $mod+Shift+q kill

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# start dmenu
bindsym $mod+d exec $HOME/.dotfiles/bin/dmenu-wal
# start fmenu (search home)
bindsym $mod+shift+d exec $HOME/.dotfiles/bin/fmenu -i $HOME -t +10
bindsym XF86Search exec $HOME/.dotfiles/bin/fmenu -i $HOME -t +10

# dmenu shortcuts
bindsym $mod+ctrl+s exec "$(cat $HOME/.dotfiles/i3/config $HOME/.dotfiles/qutebrowser/config.py $HOME/.dotfiles/vim/.vimrc | dmenu -p 'shortcuts' -l 10)"

# monitor off
bindsym $mod+F8 exec $HOME/.dotfiles/bin/monitor_off

# reload wal
bindsym $mod+y exec wal -a 85 --theme $HOME/.dotfiles/pywal/themes/dark/vscode.json

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move the whole workspace to the next output
bindsym $mod+p move workspace to output right
bindsym $mod+o move workspace to output left

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# fast focus with wmfocus
bindsym $mod+c exec --no-startup-id wmfocus

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+t floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# media player controls
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPlay exec playerctl play-pause
# pulse audio controls
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute `pacmd list-sinks | awk '/* index:/{print $3}'` toggle 
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume `pacmd list-sinks | awk '/* index:/{print $3}'` +5%
bindsym $mod+F12 exec --no-startup-id pactl set-sink-volume `pacmd list-sinks | awk '/* index:/{print $3}'` +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume `pacmd list-sinks | awk '/* index:/{print $3}'` -5%
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume `pacmd list-sinks | awk '/* index:/{print $3}'` -5%

# backlight - edit /usr/local/lib/brightnessctl/configuration.sh for step size
bindsym XF86MonBrightnessUp exec brightness+
bindsym XF86MonBrightnessDown exec brightness-

# screenshots
# scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# scrot & gimp - select window or rectangle
bindsym $mod+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'

# Start Applications
bindsym $mod+Shift+w exec qutebrowser --backend webengine --qt-flag ignore-gpu-blacklist --qt-flag enable-gpu-rasterization --qt-flag enable-native-gpu-memory-buffers --qt-flag num-raster-threads=4
bindsym $mod+Control+w exec firefox
bindsym $mod+Shift+t exec thunderbird
bindsym $mod+Shift+f exec $HOME/.dotfiles/bin/ranger-term "`$HOME/.dotfiles/bin/xcwd`"
bindsym $mod+equal exec $HOME/.dotfiles/bin/= --dmenu=dmenu
bindsym $mod+Shift+u exec $HOME/.dotfiles/bin/dmenuunicode

