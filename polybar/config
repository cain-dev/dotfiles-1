[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/updatesarch]
type = custom/script

exec = ~/.config/polybar/scripts/updates-arch.sh
format = <label>
format-padding = 1
label = %output%
interval = 120
format-underline = ${colors.primary}

[module/updatesubuntu]
type = custom/script

exec = ~/.config/polybar/scripts/updates-ubuntu.sh
format = <label>
format-padding = 1
label = %output%
interval = 120
format-underline = ${colors.primary}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
