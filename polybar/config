[colors]
#background = ${xrdb:color0:#c0222222}
background = #c0222222
background-alt = #444
foreground = ${xrdb:color7:#dfdfdf}
foreground-alt = ${xrdb:color7:#dfdfdf}
primary = ${xrdb:color1:#ffb52a}
secondary = ${xrdb:color2:#e60053}
alert = ${xrdb:color3:#bd2c40}

[bar/bar-fhd]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 35
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Sans-Regular:size=10;0
font-1 = "Font Awesome:style=Regular:size=10;1"
font-2 = "Font Awesome 5 Free:style=Regular:size=10;2"
font-3 = "Font Awesome 5 Free:style=Solid:size=10;3"
font-4 = "Font Awesome 5 Brands:style=Regular:size=10;4"
font-5 = "MaterialIcons:style=Regular:size=10;5"

modules-left = i3 
modules-center = 
modules-right = xkeyboard updatesarch filesystem memory cpu temperature wlan backlight battery pulseaudio date

tray-position = right
tray-padding = 4
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

