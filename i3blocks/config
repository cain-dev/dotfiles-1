# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=~/.config/i3blocks/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[window-title]
command=xtitle -s
interval=persist
min_width=300

[aur-update]
markup=pango
interval=600
UPDATE_COLOR=red
QUIET=1
IGNORE=root vidyodesktop

[arch-update]
#command=~/.config/i3blocks/arch-update/arch-update
markup=pango
interval= 600
QUIET=true
#WATCH=^linux.* ^pacman.*
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
AUR=true
LABEL= 

[cpu]
command=~/.config/i3blocks/cpu/cpu; [[ -z "${BLOCK_BUTTON}" ]] || ~/.config/i3blocks/cpu/cpu --popup &
interval=1

[memory]
command=~/.config/i3blocks/memory/memory; [[ -z "${BLOCK_BUTTON}" ]] || ~/.config/i3blocks/memory/memory --popup &
label= 
interval=10

[kbdd_layout]
interval=persist
label= 

[wifi]
label= 
INTERFACE=wlp2s0
interval=60

[volume-pulseaudio]
signal=10
interval=1

[battery2]
markup=pango
interval=10

[calendar]
interval=1
LABEL= 

