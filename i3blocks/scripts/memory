#!/bin/sh
# Arguments:
# 1: icon
# 2: color

def_icon=ï¡š
def_col=#fff
source $(dirname $0)/params

case $BLOCK_BUTTON in
	1 | 2 | 3)
        notify-send "$icon Memory hogs (%)" "$(ps axch -o cmd:10,pmem k -pmem | head | awk '$0=$0' )"
        ;;
esac

echo "<span color='$col'>$icon</span> $(free -h --si | awk '/^Mem:/ {print $3 "/" $2}')"
