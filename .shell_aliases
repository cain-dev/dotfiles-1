# Standard stuff
# Format for listings and directory usages
alias ll='ls -alFtr'
alias la='ls -Atr'
alias l='ls -CFtr'
alias df='df -Th'
alias du='du -h'
alias cp='cp -i'

# Regular utils
alias shit='sudo $(lc -ln -1)'

# Fbx conv with right libraries
alias fbx-conv='LD_LIBRARY_PATH=~/Programs/fbx-conv;~/Programs/fbx-conv/fbx-conv-lin64'

# Extract youtube audio as mp3
alias youtube-audio='youtube-dl --external-downloader aria2c -x --audio-format mp3 --audio-quality 6'

# Docker with sudo by default
alias docker='sudo docker'

