#
# ENVIRONMENT VARIABLES
#

# GPG Key
export GPGKEY=448C2B189756743013D5F7C22FD2A59C1D734C1F

# My variables
export PATH=$PATH:$HOME/.local/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:$HOME/.dotfiles/bin:.
export PROGRAMS=$HOME/Programs
export GAMES=$PROGRAMS/Games
export PAGER=less

# Git
export GIT=$HOME/git
export GS=$GIT/gaiasky
export TOPCAT=$PROGRAMS/Topcat

# Colored man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Vulkan SDK
export VULKAN=$HOME/Workspaces/vulkan
export VULKAN_SDK=$VULKAN/VulkanSDK/1.1.73.0/x86_64
export PATH=$PATH:$VULKAN_SDK/bin
export LD_LIBRARY_PATH=$VULKAN_SDK/lib
export VK_LAYER_PATH=$VULKAN_SDK/etc/explicit_layer.d

# Other utils
export RANGER_RELOAD_RC=FALSE
export TERMINAL=urxvt
export TERM=rxvt-256color
export BROWSER=qutebrowser
export EDITOR=/usr/bin/nvim
GPG_TTY=$(tty)
export GPG_TTY

